
<h1>This is it!</h1>
<h2>
  <ul>
    <% @files.each do |file| %>
    <li>
    <a href="<%= file %>" target="_blank"><%= file %></a>
    </li>
    <% end %>
  </ul>
</h2>

<p>
  <% if params[:sort] == "desc" %>
    <a href="/">Sort ascending</a>
  <% else %>
    <a href="/?sort=desc">Sort descending</a>
  <% end %>
</p>